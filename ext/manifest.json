{
    "manifest_version": 2,
    "name":             "Yomichan",
    "description":      "Yomichan Extension",
    "version":          "0.0.1",

    "browser_action": {"default_icon": "icon.png"},
    "background":     {"page": "bg/background.html"},
    "options_page":   "bg/options.html",

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js":      ["lib/jquery-2.2.2.min.js", "api.js", "util.js", "client.js"],
        "css":     ["client.css"]
    }]
}

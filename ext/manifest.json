{
    "manifest_version": 2,
    "name":             "Yomichan",
    "description":      "Yomichan Extension",
    "version":          "0.0.1",

    "browser_action": {"default_icon": "icon.png"},
    "background":     {"page": "background.html"},

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js":      ["content.js", "util.js"],
        "run_at":  "document_end"
    }]
}

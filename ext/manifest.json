{
    "manifest_version": 2,
    "name":             "Yomichan",
    "description":      "Yomichan Extension",
    "version":          "0.0.1",

    "browser_action": {"default_icon": "icon.png"},
    "background":     {"page": "background.html"},

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js":      ["content.js", "api.js"]
    }]
}

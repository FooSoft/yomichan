{
    "manifest_version": 2,
    "name":             "Yomichan",
    "description":      "Yomichan Extension",
    "version":          "0.0.1",

    "browser_action": {"default_icon": "icon.png"},
    "background":     {"page": "bg/background.html"},
    "options_page":   "bg/options.html",
    "permissions":    [ "storage" ],

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js":      ["js/api.js", "js/util.js", "js/client.js"],
        "css":     ["css/client.css"]
    }]
}
